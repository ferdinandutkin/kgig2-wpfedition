<Window x:Class="godhavemercyuponme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:godhavemercyuponme"
		PreviewKeyDown="WindowKeyDown"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid
        x:Name="theGrid"
        MouseDown="Grid_MouseDown"
        MouseUp="Grid_MouseUp"
        MouseMove="Grid_MouseMove"
        Background="Transparent"
        >

		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="17*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>


		<Menu Grid.Row="0">
			<MenuItem Header="Открыть файл" Click="MenuItem_Click">
				
			</MenuItem>
			
		</Menu>
		<Canvas x:Name="MainCanvas" Grid.Row="1">
			<!--основной канвас -->
		</Canvas>
		<StatusBar x:Name="Status" Grid.Row="2">

			<StatusBarItem>
				<TextBlock x:Name="BitmapStatus" />
			</StatusBarItem>
		</StatusBar>

		<Canvas Grid.Row="1">
			<!-- служебный канвас только для бокса-->
			<Rectangle
                x:Name="selectionBox"
                Visibility="Collapsed"
                Stroke="Black"
                StrokeThickness="1"
                />


		</Canvas>
	</Grid>

</Window>
